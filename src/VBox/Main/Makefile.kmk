	$(VBOX_JMSCOM_JAR) \
	$(VBOX_JMSCOM_GEN)/jmscomglue.list \
	$(wildcard \
		$(VBOX_JMSCOM_GEN)/java/*.java \
		$(VBOX_JMSCOM_JDEST)/*.class \
